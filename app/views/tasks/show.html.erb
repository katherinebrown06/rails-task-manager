
<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<h3><%= @task.completed %></h3>

<div class="d-flex align-items-center button-area">
<%= link_to 'Back to list', tasks_path, class: "btn btn-secondary" %>

<%= link_to 'Edit task', task_edit_path(@task.id), class: "btn btn-primary" %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"
  %>
</div>
